package com.example.demo.hal.repository;

import com.example.demo.hal.domain.Hall;
import com.querydsl.jpa.impl.JPAQueryFactory;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.NamedQuery;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.jpa.repository.support.QuerydslRepositorySupport;
import org.springframework.stereotype.Repository;

@Repository
public class HallRepositoryImpl extends QuerydslRepositorySupport implements IHallRepository{
	private final JPAQueryFactory qf;
	private final EntityManager em;
	public HallRepositoryImpl(JPAQueryFactory qf, EntityManager em) {
		super(Hall.class);
		this.qf = qf;
		this.em = em;
	}
	@SuppressWarnings("unchecked")
	@Override
	public List<Hall> findByName(String name) {
		return em.createNamedQuery("Hall.findByName").setParameter("hallName", name)
												 	.getResultList();
	}
	@SuppressWarnings("unchecked")
	@Override
	public List<Hall> findByLocation(String location) {
		return em.createQuery("select h from Hall h where h.hall_location like :hallLocation")
				.setParameter("hallLocation", location).getResultList();
	}
	@Query("update hall set hall_closed = :hallClosed, hall_info = :hallInfo, hall_image = :hallImage where id = :id")
	public int update(Hall t) {
		return 0;
	}
}
